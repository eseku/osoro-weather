  <!DOCTYPE html>
  <html lang="en" dir="ltr">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <link rel="icon" href="/img/download.png">
    <link rel="stylesheet" href="css/materializecss/materialize.css">
    <link rel="stylesheet" href="/css/custom.css">
    <link rel="stylesheet" href="/css/fontawesome-pro-5.8.2-web/css/all.css">
    <title>Home</title>
  </head>
  <body class="grey lighten-4">
    <div class="main">
      {{>header}}


      <div class="grey lighten-4">
        <div class="container">
          <div class="row">
              <div class="col s12 m3"></div>
              <div class="col s12 m6">
                <div class="row">
                  <div class="col s2" style="padding-top:30px;">
                      <button id="locationButton" class="btn btn-small btn-floating teal accent-3 pulse waves-effect waves-light" type="submit" name="action"><i style="font-size:10px;" class="fal fa-location-arrow"></i></button>
                  </div>
                    <div class="col s7">
                      <div class="input-field">
                        <input style="width:100%" id="textarea1" type="text" placeholder="Search City, State,Town or Country">
                        <label for="textarea1"></label>
                      </div>
                    </div>
                    <div class="col s3" style="padding-top:30px;">
                      <button id="submitButton" class="btn btn-tiny blue lighten-1 waves-effect waves-light" type="submit" name="action"><i style="font-size:12px;" class="fal fa-search"></i></button>
                    </div>
                </div>
              </div>
              <div class="col s12 m3"></div>
          </div>

        </div>
      </div>

        <div class="parallax-container">

          <div class="section no-pad-bot">
              <div class="container" id="yourtablecontainer">
                <h3 class="title1 center-align">Get real time weather results at your location!</h3>
                <table id="yourlocationtable" class="responsive-table white-text">
                  <thead>
                    <tr>
                      <th>Summary  <i class="fal fa-file-alt"></i></th>
                      <th>Chance of Rain <span><i class="fal fa-cloud-drizzle"></i></span></th>
                      <th>Humidity <span><i class="fal fa-humidity"></i></span> </th>
                      <th>Temperature <span><i class="fal fa-temperature-high"></i></span> </th>
                      <th>Time Zone  <i class="fal fa-clock"></i></th>
                      <th>Visibility <span><i class="fal fa-eye-slash"></i></span></th>
                    </tr>
                  </thead>
                  <tbody>
                  </tbody>
                </table>

      <div class="progress" style="margin-top: 50px; display:none" id="progress1">
          <div class="indeterminate"></div>
      </div>


              </div>
          </div>
              <div class="parallax"><img class="p-image" src="img/sun.jpg"></div>
            </div>

            <div class="container">

              <div class="row">
                  <div class="col s12">
                      <h4>Search Results</h4>
                  </div>
              </div>

              <table class="striped responsive-table centered highlight" id="table1">
                <thead>
                  <tr>
                    <th>Location  <i class="fa fa-map-marker"></i></th>
                     <th>Summary  <i class="fal fa-file-alt"></i></th>
                     <th>Chance of Rain <span><i class="fal fa-cloud-drizzle"></i></span></th>
                     <th>Humidity  <span><i class="fal fa-humidity"></i></span></th>
                     <th>Temperature <i class="fal fa-temperature-high"></i></th>
                     <th>Time Zone  <i class="fal fa-clock"></i></th>
                     <th>Visibility <span><i class="fal fa-eye-slash"></i></span></th>
                  </tr>
                </thead>
                <tbody>
                </tbody>
              </table>
              <div class="progress" id="progress2" style="margin-top: 50px; display:none">
                  <div class="indeterminate"></div>
              </div>

              <div class="row" id="dailyparagraph" style="padding:10px;">
                  <div class="col-12 teal accent-2 center-align">
                    <h5 id="weeklysummary"></h5>
                  </div>
              </div>

            </div>


    </div>

    {{>footer}}
    <script type="text/javascript" src="/js/jquery.js"></script>
    <script type="text/javascript" src="/js/materializejs/materialize.js"></script>
    <script type="text/javascript" src="/js/script1.js"></script>
    <script type="text/javascript">
        $(()=>{
          $('.sidenav').sidenav();
            $('.parallax').parallax();
        });
    </script>
  </body>
</html>
